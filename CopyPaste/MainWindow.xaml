<Window x:Class="CopyPaste.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyPaste"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <RichTextBox Name="Text" HorizontalAlignment="Left" Height="237" Margin="19,73,0,0" VerticalAlignment="Top" Width="452">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Copy" HorizontalAlignment="Left" Margin="27,26,0,0" VerticalAlignment="Top" Width="75" Click="Button_ClickCopy"/>
        <Button Content="Paste" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="117,26,0,0" Click="Button_ClickPaste"/>
        <Button Content="Cut" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="210,26,0,0" Click="Button_ClickCut"/>
    </Grid>
</Window>
